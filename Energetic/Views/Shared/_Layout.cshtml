

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/header.css")
    

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">

</head>
<body>

    <header id="header">
        <div class="row">
            <div class="col-lg-2  col-sm-2 col-md-2 col-2 logo"><img src="../../Images/Logo.png" height="120" width="150" /></div>
            <div class="col-lg-2 col-sm-2  col-md-2 col-2 menu" id="club">
                <section class="menu_header" id="header_club">Клуб</section>
                <section class="menu_item" id="menu_club">
                    <section class="menu_link"><a id="info" href="@Url.Action("usualInformation", "Home")">Общая информация</a></section>
                    <section class="menu_link"><a id="boss" href="@Url.Action("managment", "Home")">Руководство</a></section>
                    <section class="menu_link"><a id="contacts" href="@Url.Action("Contacts", "Home")">Контакты</a></section>
                    <section class="menu_link"><a href="@Url.Action("stadiums", "Home")">Стадионы</a></section>
                    <section class="menu_link"><a id="history" href="@Url.Action("history", "Home")">История</a></section>
                </section>
            </div>
            <div class="col-lg-2 col-sm-2  col-md-2 col-2 menu" id="team">
                <section class="menu_header" id="header_team">Команда</section>
                <section class="menu_item" id="menu_team">
                    <section class="menu_link"><a id="coach" href="@Url.Action("coachs", "Home")">Тренерский штаб</a></section>
                    <section class="menu_link"><a id="main_squad" href="@Url.Action("mainPlayers", "Home")">Основной состав</a></section>
                    <section class="menu_link"><a id="legends" href="@Url.Action("legends", "Home")">Зал славы</a></section>
                </section>
            </div>
            <div class="col-lg-2 col-sm-2  col-md-2 col-2 menu">
                <section class="menu_header" id="header_statistic">Статитстика</section>
                <section class="menu_item" id="menu_statistic">
                    <section class="menu_link"><a id="players" href="@Url.Action("players", "Home")">Игроки</a></section>
                    <section class="menu_link"><a id="main_team" href="@Url.Action("team", "Home")">Команда</a></section>

                </section>
            </div>
            <div class="col-lg-2 col-sm-2  col-md-2 col-2 menu" id="multimedia">
                <section class="menu_header" id="header_multi">Мультимедиа</section>
                <section class="menu_item" id="menu_multi">
                    <section class="menu_link"><a id="gallery" href="@Url.Action("albums", "Home")">Галерея</a></section>
                    <section class="menu_link"><a id="video" href="@Url.Action("video", "Home")">Видео</a></section>
                </section>
            </div>
            <div class="col-lg-2  col-sm-2 col-md-2 col-2 logo">
                <a href="@Url.Action("index", "Home")">
                    <img src="../../Images/Home.png" id="b_exit" height="80" width="80 " />
                </a>
            </div>

        </div>
    </header>







    <div class="content">
        @RenderBody()
    </div>

    <div class="content">
        @{Html.RenderAction("footer", "Home");}
    </div>

    
    @Scripts.Render("~/Scripts/Head.js")


</body>
</html>
