<!DOCTYPE html>
<html lang="en">
<head>
    @Styles.Render("~/Content/ENERGETIC-ADMIN_STYLES/Main_styles/Index.css")
    <meta charset="UTF-8">
    <title>Авторизация</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    @{
        Layout = null;
    }

</head>
<body>
 
    <section id="all">

        <section class="row">
             <section class="col-lg-12 col-sm-12 col-md-12 col-12 header">
                   <section class="fullName">
                     Энергетик-Бгату
                  </section>
              </section>
        </section>


    <section id="content">

        <section class="row">
            <section class="col-lg-12 col-sm-12 col-md-12 col-12 container">
                <section class="autorithation_field">
                    <input id="input_1" type="text" name="login" placeholder="Введите логин" />
                </section>
            </section>
        </section>

        <section class="row">
            <section class="col-lg-12 col-sm-12 col-md-12 col-12 container">
                <section class="autorithation_field" id="password">
                    <input id="input_2" type="password" name="password" placeholder="Введите пароль" />
                    <img id="eye" src="~/images/mbripreview_99511.png" height="16"
                         width="18" />
                </section>
            </section>
        </section>

        <section class="row">
            <section class="col-lg-12 col-sm-12 col-md-12 col-12 container">
                <section id="wrong">
                    <p>Неверный логин или пароль</p>
                </section>
            </section>
        </section>

        <section class="row">
            <section class="col-lg-12 col-sm-12 col-md-12 col-12 container">
                <section class="autorithation_field">
                    <button id="btn">Вход</button>
                </section>
            </section>
        </section>
    </section>

    <script src="~/Scripts/ENERGETIC-ADMIN_SCRIPTS/Main_scripts/Index.js"></script>

</section>

</body>
</html>
