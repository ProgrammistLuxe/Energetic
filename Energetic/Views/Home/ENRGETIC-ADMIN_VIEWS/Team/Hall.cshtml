@using Energetic.Models.Club.Personal;
@model List<Personal>

<!DOCTYPE html>
<html lang="en">
<head>

    @{
        Layout = "~/Views/Shared/_Layout_admin.cshtml";
    }

    @Styles.Render("~/Content/ENERGETIC-ADMIN_STYLES/Team_styles/Hall.css")
    <meta charset="UTF-8">
    <title>Зал славы</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">

</head>
<body>
    <section id="all">

        @* всплывающее окно*@
        <section class="popup_block" id="popup_show_1">
            <section class="close_btn" id="close_btn_1"><img src="~/images/delete.png" max-width="48px" /></section>

            <section class="popup" id="popup_add_1">
                <section id="hidden_block_for_PopupImage_Add" class="hidden_block_for_PopupImage">Рекомендуемое разрешение: (400:400)</section>
                <section class="popup_image" id="photo_block_inAddPopup">
                    <img class="popup_img" src="~/images/вратарь2.png" />
                    <section class="hidden">
                        <section class="hidden_item">
                            <img src="~/images/камера.png" />
                        </section>
                    </section>
                </section>
                <h1>Фамилия</h1>
                <input type="text" name="surname" placeholder="Введите фамилию" />
                <h1>Имя</h1>
                <input type="text" name="name" placeholder="Введите имя" />
                <h1>Отчество</h1>
                <input type="text" name="patronymic" placeholder="Введите отчество" />
                <h1>Заслуга</h1>
                <input type="text" name="position" placeholder="Введите заслугу" onblur="hidden_block_1.style.display='none' " onfocus=" hidden_block_1.style.display='block' " />
                <section id="hidden_block_1" class="hidden_block">Напишите, как этот человек  попал в зал  славы  ФК Энергетик</section>




                <button class="btn_add_popup">Добавить</button>
            </section>



            <section class="popup" id="popup_edit_1">
                <section id="hidden_block_for_PopupImage_Edit" class="hidden_block_for_PopupImage">Рекомендуемое разрешение: (400:400)</section>
                <section class="popup_image" id="photo_block_inEditPopup">
                    <img class="popup_img" src="~/images/вратарь2.png" />
                    <section class="hidden">
                        <section class="hidden_item">
                            <img src="~/images/камера.png" />
                        </section>
                    </section>
                </section>
                <h1>Фамилия</h1>
                <input type="text" name="surname" placeholder="Введите фамилию" />
                <h1>Имя</h1>
                <input type="text" name="name" placeholder="Введите имя" />
                <h1>Отчество</h1>
                <input type="text" name="patronymic" placeholder="Введите отчество" />
                <h1>Заслуга</h1>
                <input type="text" name="birthday" placeholder="Заслуженный игрок" onblur="hidden_block_2.style.display='none' " onfocus=" hidden_block_2.style.display='block' " />
                <section id="hidden_block_2" class="hidden_block">Напишите, как этот человек  попал в зал  славы  ФК Энергетик </section>

                <button class="btn_add_popup" id>Редактировать</button>
            </section>
        </section>




        @* всплывающее окно*@

        <section id="content">

            <section class="container">
                <section class="row">
                    <section class="col-lg-12 col-sm-12 col-md-12 col-12">
                        <section class="fullName">
                            Команда
                        </section>
                    </section>
                </section>
            </section>

            <section id="header_multimedia">
                <a href="@Url.Action("Players_admin","Home")" class="header_item">Игроки</a>
                <a href="@Url.Action("Coach","Home")"class="header_item">Тренеры</a>
                <a href="@Url.Action("Bosses","Home")" class="header_item">Руководство</a>
                <a class="header_item_active">Зал славы</a>

            </section>
            <button class="btn_add" id="btn_add_1">Добавить</button>
            <section class="edit">
                @foreach (Personal el in Model)
                {
                <section class="change">
                    <section class="row">

                        <section class=" col-lg-6 col-md-6 col-sm-6 col-6 player_info player_card">
                            <section class="photo"><img src="@Url.Action(el.Photo)" /></section>
                            <section class="player_data">
                                <p class="data">@el.Surname  @el.Name</p>
                                <p class="data_name">ФИО</p>
                            </section>
                        </section>

                        <section class="col-lg-2 col-md-2 col-sm-2 col-2  player_info">
                            <p class="number">@el.Position</p>
                            <p class="number_name">заслуга</p>
                        </section>

                         <section class="col-lg-4 col-md-4 col-sm-12 col-12  player_info" id="buttons">
                             <button class="btn_edit">Редактировать</button>
                             <button class="btn_delete">Удалить</button>
                        </section>
                    </section>
                </section>
                }

            </section>


        </section>


        <script src="~/Scripts/ENERGETIC-ADMIN_SCRIPTS/Team_scripts/Hall.js"></script>

    </section>



</body>
</html>


