@using Energetic.Models.Club.Stadium;
@model List<Stadium>

<!DOCTYPE html>
<html lang="en">
<head>


    @{
        Layout = "~/Views/Shared/_Layout_admin.cshtml";
    }

    @Styles.Render("~/Content/ENERGETIC-ADMIN_STYLES/Club_styles/Stadium_style.css")
    <meta charset="UTF-8">
    <title>Stadium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">

</head>
<body>
    <section id="all">

        @* всплывающее окно*@
        <section class="popup_block" id="popup_show_1">
            <section class="close_btn" id="close_btn_1"><img src="~/images/delete.png" max-width="48px" /></section>

            <section class="popup" id="popup_add_1">
                <section id="hidden_block_for_PopupImage_Add" class="hidden_block_for_PopupImage">Рекомендуемое разрешение: (700:400)</section>
                <section class="popup_image" id="photo_block_inAddPopup">
                    <img class="popup_img" src="~/images/поле4.png" />
                    <section class="hidden">
                        <section class="hidden_item">
                            <img src="~/images/камера.png" />
                        </section>
                    </section>
                </section>
                <h1>Название</h1>
                <input type="text" name="name" placeholder="Введите название" />
                <h1>Местоположение</h1>
                <input type="text" name="location" placeholder="Введите местоположение" />
                <h1>Вместимость</h1>
                <input id="input_1" type="text" name="capacity" placeholder="Введите вместимость" />
                <h1>Карта</h1>
                <input type="text" name="position" placeholder="Введите ссылку на Google maps " />



                <button class="btn_add_popup" id>Добавить</button>
            </section>



            <section class="popup" id="popup_edit_1">
                <section id="hidden_block_for_PopupImage_Edit" class="hidden_block_for_PopupImage">Рекомендуемое разрешение: (700:400)</section>
                <section class="popup_image" id="photo_block_inEditPopup">
                    <img class="popup_img" src="~/images/поле4.png" />
                    <section class="hidden">
                        <section class="hidden_item">
                            <img src="~/images/камера.png" />
                        </section>
                    </section>
                </section>
                <h1>Название</h1>
                <input type="text" name="name" placeholder="Бгату" />
                <h1>Местоположение</h1>
                <input type="text" name="location" placeholder="ул. Натуралистов 10, Минск" />
                <h1>Вместимость</h1>
                <input id="input_1" type="text" name="capacity" placeholder="830" />
                <h1>Карта</h1>
                <input type="text" name="position" placeholder="https://www.google.ru/maps/pla " />
                <button class="btn_add_popup" id>Редактировать</button>
            </section>
        </section>
        

   






        @* всплывающее окно*@



<section id="content">

    <section class="container">
        <section class="row">
            <section class="col-lg-12 col-sm-12 col-md-12 col-12">
                <section class="fullName">
                    Клуб
                </section>
            </section>
        </section>
    </section>

    <section id="header_multimedia">
        <a href="@Url.Action("Global_info","Home")" class="header_item">Общая информация</a>
        <a href="@Url.Action("Statistics","Home")" class="header_item">Статистика клуба</a>
        <a href="@Url.Action("Contacts_admin","Home")" class="header_item">Контакты</a>
        <a href="@Url.Action("History","Home")" class="header_item">История</a>
        <a class="header_item_active">Стадион</a>

    </section>

    <button class="btn_add" id="btn_add_1">Добавить</button>

    <section class="edit">
        @foreach (Stadium el in Model)
        {
            <section class="change">
                <section class="row">

                    <section class=" col-lg-3 col-md-3 col-sm-3 col-3 player_info player_card">
                        <section class="player_data">
                            <p class="data">@el.Name</p>
                            <p class="data_name">название</p>
                        </section>
                    </section>

                    <section class=" col-lg-6 col-md-6 col-sm-6 col-6 player_info player_card">
                    </section>

                    <section class="col-lg-3 col-md-3 col-sm-3 col-3  player_info" id="buttons">
                        <button class="btn_edit">Редактировать</button>
                        <button class="btn_delete">Удалить</button>
                    </section>

                    


                </section>
            </section>
        }

        </section>



</section>


        <script src="~/Scripts/ENERGETIC-ADMIN_SCRIPTS/Club_scripts/Stadium.js"></script>
    </section>



</body>
</html>




