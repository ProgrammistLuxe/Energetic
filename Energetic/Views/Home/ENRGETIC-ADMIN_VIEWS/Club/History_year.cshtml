@using Energetic.Models.Club.History;
@model List<IGrouping<int, Turnament>>

<!DOCTYPE html>
<html lang="en">
<head>


    @{
        Layout = "~/Views/Shared/_Layout_admin.cshtml";
    }

    @Styles.Render("~/Content/ENERGETIC-ADMIN_STYLES/Club_styles/History_year_style.css")
    <meta charset="UTF-8">
    <title>Year</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">

</head>
<body>
    <section id="all">

        @* всплывающее окно*@
        <section class="popup_block" id="popup_show_1">
            <section class="close_btn" id="close_btn_1"><img src="~/images/delete.png" max-width="48px" /></section>

            <section class="popup" id="popup_add_1">

                <h1>Турнир</h1>
                <input type="text" name="cup" placeholder="Введите название" />
                <h1>Итоговое место</h1>
                <input type="text" name="place" placeholder="Введите место" />
                <h1>Очки(стадия плей-офф)</h1>
                <input id="input_1" type="text" name="stage" placeholder="Введите значение" />
                <h1>Разница мячей</h1>
                <input type="text" name="balls" placeholder="Введите разницу мячей" />



                <button class="btn_add_popup" id>Добавить</button>
            </section>



            <section class="popup" id="popup_edit_1">

                <h1>Турнир</h1>
                <input type="text" name="cup" placeholder="Введите название" />
                <h1>Итоговое место</h1>
                <input type="text" name="place" placeholder="Введите место" />
                <h1>Очки(стадия плей-офф)</h1>
                <input id="input_1" type="text" name="stage" placeholder="Введите значение" />
                <h1>Разница мячей</h1>
                <input type="text" name="balls" placeholder="Введите разницу мячей" />

                <button class="btn_add_popup" id>Редактировать</button>
            </section>
        </section>









        @* всплывающее окно*@



        <section id="content">

            <section class="container">
                <section class="row">
                    <section class="col-lg-12 col-sm-12 col-md-12 col-12">
                        <section class="fullName">
                            2020
                        </section>
                    </section>
                </section>
            </section>

            <section id="header_multimedia">
                <a href="@Url.Action("Global_info","Home")" class="header_item">Общая информация</a>
                <a href="@Url.Action("Statistics","Home")" class="header_item">Статистика клуба</a>
                <a href="@Url.Action("Contacts_admin","Home")" class="header_item">Контакты</a>
                <a href="@Url.Action("History","Home")" class="header_item_active">История</a>
                <a href="@Url.Action("Stadium","Home")" class="header_item">Стадион</a>

            </section>

            <button class="btn_add" id="btn_add_1">Добавить</button>

            <section class="edit">
                @foreach (Turnament el in Model)
                {
                    <section class="change">
                        <section class="row">
                            <section class=" col-lg-4 col-md-4 col-sm-4 col-4 player_info player_card">
                                <section class="player_data">
                                    <p class="data">@el.Name</p>
                                    <p class="data_name">Турнир</p>
                                </section>
                            </section>

                            <section class=" col-lg-5 col-md-5 col-sm-5 col-5 player_info player_card">
                            </section>

                            <section class="col-lg-3 col-md-3 col-sm-3 col-3  player_info" id="buttons">
                                <button class="btn_edit">Редактировать</button>
                                <button class="btn_delete">Удалить</button>
                            </section>
                        </section>
                    </section>

                }

            </section>



        </section>


        <script src="~/Scripts/ENERGETIC-ADMIN_SCRIPTS/Club_scripts/History_year.js"></script>
    </section>



</body>
</html>




