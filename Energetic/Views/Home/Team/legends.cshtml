@using Energetic.Models.Club.Personal
@model List<Personal>

<!DOCTYPE html>
<html lang="en">
<head>

    <title>Legends</title>
    @Styles.Render("~/Content/Team/legends.css")

</head>
<body>

    <section class="row">
        <section class="col-lg-12 col-sm-12 col-md-12 col-12 container">
            <section class="fullName">
                Зал Славы
            </section>
        </section>
    </section>
    <section class="elements">

        <!--WORKPLACE-->
        <section class="peoples">
            @foreach (Personal el in Model)
            {
            <section class="person">
                <section class="col-lg-6 col-sm-6 col-md-6 col-6 image">

                    <img class="img" src="@Url.Content(el.Photo)" />

                    <section class="hidden">
                        <section class="hidden_item">
                            @el.Position
                        </section>
                    </section>

                </section>

                <section class="Name">
                    @el.Name
                </section>
            </section>

            }
        </section>


        <!--END OF WORKPLACE-->
    </section>


</body>
</html>

